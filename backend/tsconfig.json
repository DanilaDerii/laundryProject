{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "lib",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"]
    },

    "types": ["node", "vitest"]
  },
  "include": ["lib", "tests"]
}
